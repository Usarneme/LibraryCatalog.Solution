@{
  ViewData["Title"] = "Books - Checkout";
}

@model Library.Models.Book;

<section>
  <h1>Checkout Book - @Model.Title</h1>
  <h2>@Model.Copies Copies Available</h2>

  @using (Html.BeginForm("Checkout", "Books", new
  {
    BookId = Model.BookId,
    LibraryUserId = ViewBag.user.Id
  }))
  {
    <input type="submit" value="Check Out Book" />
  }
</section>
