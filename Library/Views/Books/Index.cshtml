@{
  ViewData["Title"] = "Home Page";
  bool IsLibrarian = ViewBag.user.IsLibrarian;
}

<div class="text-center">
  <h1 class="display-4">Books</h1>
  @if (IsLibrarian)
  {
    <h3>Librarian Books Administration</h3>
  }
  <div class="container">
    <ul>
      @if (ViewBag.allBooks.Count == 0)
      {
        <h3>No books yet added.</h3>
      }
      else
      {
        <h4>Total Books: @ViewBag.allBooks.Count</h4>
        @foreach (Book book in ViewBag.allBooks)
        {
          <li>
            @book.Title
            @book.Copies
            @Html.ActionLink("Check Me Out", book.BookId, "books")
          </li>
        }
      }
    </ul>

    <a href="/books/create">Create New Book</a>
  </div>
</div>
