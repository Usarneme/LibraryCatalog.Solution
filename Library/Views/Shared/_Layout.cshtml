<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - LibraryCatalog</title>
  <link rel="stylesheet" href="~/styles/reset.css" />
  <link rel="stylesheet" href="~/styles/trunk.css" />
</head>

<body>
  <header>
    <nav>
      <ul>
        <li>
          <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        </li>
        <li>
          <a asp-area="" asp-controller="Books" asp-action="Index">Books</a>
        </li>
        <li>
          <a asp-area="" asp-controller="Account" asp-action="Index">Account</a>
        </li>
      </ul>
    </nav>
  </header>

  <main role="main">
    @RenderBody()
  </main>

  <footer>
    <div>&copy; 2021 - LibraryCatalog</div>
  </footer>
  <script src="~/lib/jquery/dist/jquery.min.js"></script>
  <script src="~/js/site.js" asp-append-version="true"></script>
  @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
